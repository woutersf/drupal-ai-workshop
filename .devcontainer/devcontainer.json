{
  "name": "Drupal AI Workshop",
  "image": "mcr.microsoft.com/devcontainers/php:1-8.3",
  "dockerComposeFile": [
    "../compose.yml"
  ],
  "service": "php",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "shutdownAction": "stopCompose",
  "overrideCommand": true,
  "forwardPorts": [80],
  //"forwardPorts": [80, 82, 8025],
  "portsAttributes": {
    "80": {
      "label": "Drupal",
      "onAutoForward": "openBrowser",
      "visibility": "public"
    },
    // "82": {
    //   "label": "PhpMyAdmin",
    //   "onAutoForward": "openBrowser",
    //   "visibility": "private"
    // },
    // "8025": {
    //   "label": "Mailpit",
    //   "onAutoForward": "openBrowser",
    //   "visibility": "private"
    // }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",  // PHP language support
        "felixfbecker.php-debug",               // Debugger
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-json"                 // JSON editing
      ]
    }
  },
  "remoteUser": "www-data",
  "containerEnv": {
    "SHELL": "/bin/bash"
  }
}